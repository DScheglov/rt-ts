{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./esm",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": true,
    "importHelpers": false,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "types": ["jest", "node"],
  "lib": ["es6", "es7"],
  "include": ["./src/**/*.ts"]
}